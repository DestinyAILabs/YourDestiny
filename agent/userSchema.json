{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "_id": {
                "type": "string",
                "format": "uuid",
                "coerce": true
            },
            "walletAddress": {
                "type": "string"
            },
            "currentWorld": {
                "type": "string",
                "enum": ["earth", "mars", "venus"]
            }
        },
        "required": ["_id", "walletAddress", "currentWorld"],
        "additionalProperties": false
    }
  }