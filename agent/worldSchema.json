{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "format": "uuid",
          "coerce": true
        },
        "walletAddress": {
          "type": "string"
        },
        "messages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "role": {
                "type": "string",
                "enum": ["system", "user", "assistant"]
              },
              "content": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": ["$share"]
              },
              "timestamp": {
                "type": "string",
                "format": "date-time"
              }
            },
            "required": ["role", "content", "timestamp"]
          }
        },
        "stats": {
            "type": "object",
            "properties": {
                "stamina": {
                    "type": "integer",
                    "minimum": 0
                },
                "power": {
                    "type": "integer",
                    "minimum": 0
                },
                "energy": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "required": ["stamina", "power", "energy"]
        },
        "nfts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "address": {
                        "type": "string"
                    },
                    "tokenId": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "amount": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "required": ["address", "tokenId", "name", "amount"]
            }
        },
        "assets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "address": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "amount": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "required": ["address", "name", "amount"]
            }
        },
        "currentWorld": {
            "type": "string",
            "enum": ["earth", "mars", "venus"]
        }
      },
      "required": ["_id", "walletAddress", "messages", "stats", "nfts", "assets", "currentWorld"],
      "additionalProperties": false
    }
  }